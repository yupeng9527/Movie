<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_131"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#1c2243">

        <ImageView
            android:id="@+id/iv_more_imageUrl"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_101"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_more_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv_more_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv_more_starring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_more_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#ffffff"/>

                <Button
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_20"
                    android:text="购票"
                    android:background="@drawable/buyticket"
                    android:textColor="#ffffff"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginLeft="@dimen/dp_77"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>