<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#141931"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_27">

        <ImageButton
            android:id="@+id/frag_movie_ib_location"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/icon_location" />

        <ImageButton
            android:id="@+id/frag_movie_ib_search"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_search" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_27">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_cinema"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="#ffffff">



        </android.support.design.widget.TabLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_cinema"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

</LinearLayout>